<div class="col-sm-10 col-sm-offset-2 content">
  <h1>Donor List</h1>
  <div class="table-responsive">
 <table class="table table-striped">
   <thead>
     <tr>
       <th>Name</th>
       <th>Email</th>
       <th>Total Donations ($)</th>
     </tr>
   </thead>
   <tbody>
     {{#each model as |donor|}}
     <tr>
       <td class="donors">{{donor.name}}</td>
       <td>{{donor.email}}</td>
       <td>{{donor.donatedAmount}}</td>

     </tr>
     {{/each}}
   </tbody>
 </table>
 </div>

</div>
