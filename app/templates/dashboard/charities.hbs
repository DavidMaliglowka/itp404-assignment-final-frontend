<div class="col-sm-10 col-sm-offset-2 content">
  <h1>Charities</h1>
  <div class="table-responsive">
 <table class="table table-striped">
   <thead>
     <tr>
       <th>Charity</th>
       <th>Description</th>
       <th>Category</th>
     </tr>
   </thead>
   <tbody>
     {{#each model as |charity|}}
     <tr>
       <td class="charities">{{charity.name}}</td>
       <td>{{charity.text}}</td>
       <td>{{charity.category}}</td>
     </tr>
     {{/each}}
   </tbody>
 </table>
 </div>

</div>
